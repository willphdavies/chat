doctype html
html
    head
        title Socket.IO chat
        style.
            * { margin: 0; padding: 0; box-sizing: border-box; }
            body { font: 13px Helvetica, Arial; }
            form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
            form input { border: 0; padding: 10px; margin-right: .33%; }
            form input#m { width: 70%; }
            form input#name { width: 20%; }
            form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
            #messages { list-style-type: none; margin: 0; padding: 0; }
            #messages li { padding: 5px 10px; }
            #messages li:nth-child(odd) { background: #eee; }
    body
        ul#messages
            li Chat History
            each m in msgs
                li()=m.name+' said: '+m.msg
            li ------
        form(action='')
            input#name()
            input#m(autocomplete='off')
            button Send
        script(src='https://cdn.socket.io/socket.io-1.2.0.js')
        script(src='http://code.jquery.com/jquery-1.11.1.js')
        script.
            var socket = io();
            $('form').submit(function(){
                if ($('#name').val()!=='' && $('#m').val()!=='') {
                    socket.emit('chat message', {msg: $('#m').val(), name: $('#name').val()});
                    $('#m').val('');
                }
                return false;
            });
            socket.on('chat message', function(msg){
                $('#messages').append($('<li>').text(msg.name+' says: '+msg.msg));
            });
